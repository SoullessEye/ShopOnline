@model IEnumerable<ShopOnlineConnection.SanPham>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<style>

    table {
        border-collapse: collapse;
        width: 50%;
        margin: auto;
    }

    th, td {
        text-align: center;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2
    }

    th {
        background-color: hotpink;
        color: white;
    }

    h2 {
        margin-left: 250px;
    }
</style>

<h2>Quản Lý Sản Phẩm</h2>

<table>
    <tr>
        <th>Mã Nhà Sản Xuất</th>
        <th>Tên Nhà Sản Xuất</th>
        <th>Tình Trạng</th>
        <th>Hình Ảnh</th>
        <th colspan="2">
            <a href="@Url.Action("Create", "SanPhamAdmin") "><img src="~/Asset/images/AddNSX.png" /></a>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MaSanPham</td>
            <td>@item.TenSanPham</td>
            <td>@item.TinhTrang</td>
            <td><img src="~/Asset/images/@item.Hinhchinh" style="width:70px; height:90px" /></td>
            <td><a href="@Url.Action("Edit","SanPhamAdmin", new {id =@item.MaSanPham})"><img src="~/Asset/images/edit.png" /></a></td>
            <td><a href="@Url.Action("Delete", "SanPhamAdmin", new {id = item.MaSanPham })"><img src="~/Asset/images/delete.png" /></a></td>
        </tr>
    }

</table>

