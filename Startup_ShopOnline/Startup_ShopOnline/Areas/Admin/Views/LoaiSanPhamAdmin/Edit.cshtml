@model ShopOnlineConnection.LoaiSanPham
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<style>
    input[type=text], select {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    input[type=submit] {
        width: 100%;
        background-color: gray;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        input[type=submit]:hover {
            background-color: hotpink;
        }

    h3 {
        margin-left: 260px;
    }

    h2 {
        margin-left: 260px;
    }
</style>
<h3>Chỉnh Sửa Nhà Sản Xuất</h3>

<div style="margin: auto">
    @using (Html.BeginForm("Edit", "LoaiSanPhamAdmin", FormMethod.Post, new { @style = "margin-left:260px; margin: auto; width: 35%" }))
    {
        <label for="fname">Mã Loại Sản Phẩm</label>
        <input type="text" id="fname" name="MaLoaiSanPham" style="background-color: white" placeholder="Mã Loại Sản Phẩm..." required value="@Model.MaLoaiSanPham" readonly>

        <label for="lname">Tên Loại Sản Phẩm</label>
        <input type="text" id="lname" name="TenLoaiSanPham" style="background-color: white" placeholder="Tên Loại Sản Phẩm..." required value="@Model.TenLoaiSanPham">

        <label for="country">Tình Trạng</label>
        <select id="country" style="width:30%; background-color: white" name="TinhTrang" required>
            @if (Model.TinhTrang == "1")
            {
                <option value="0">Chưa Khóa</option>
                <option value="1" selected>Đã Khóa</option>
            }
            else
            {
                <option value="0" selected>Chưa Khóa</option>
                <option value="1">Đã Khóa</option>
            }

        </select>

        <input type="submit" value="Xác Nhận Chỉnh Sửa">
    }



</div>

